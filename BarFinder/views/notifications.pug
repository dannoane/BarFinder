doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    // Latest compiled and minified CSS
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u', crossorigin='anonymous')
    // Optional theme
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css', integrity='sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp', crossorigin='anonymous')
    link(href='https://fonts.googleapis.com/css?family=Amatic+SC:700', rel='stylesheet')
    script(src='https://use.fontawesome.com/39b94259c3.js')
    link(rel='stylesheet', href='/stylesheets/home.css')
    script(type='text/javascript', src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')
    link(rel='stylesheet', href='/stylesheets/notifications.css')
    script(src='/javascript/notifications.js')
    title The Bar Finder
    link(rel='icon', href='images/bariconsmall.png')
  body
    .container
      nav.navbar.navbar-default
        .container-fluid
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='http://10.10.10.10:3000') BarFinder
          #navbar.navbar-collapse.collapse
            ul.nav.navbar-nav
              li
                a(href='/search')
                  i.fa.fa-home(aria-hidden='true')
                  |  Home
              li
                a(href='/groups')
                  i.fa.fa-users(aria-hidden='true')
                  |  Groups
            ul.nav.navbar-nav.navbar-right
              li.active
                a(href='/notifications')
                  i.fa.fa-envelope(aria-hidden='true')
                  |  Notifications
              li
                a(href='/preferences')
                  i.fa.fa-heart(aria-hidden='true')
                  |  Preferences
              li.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                  i.fa.fa-user-circle(aria-hidden='true')
                  |                                 #{username}
                  span.caret
                ul.dropdown-menu
                  li
                    a(href='/logout') Logout
      div(id='content')
        ul.notificationList
          each notif in notifications
            li.notificationItem(value="ASDF")
              a.noStyle(href="" + notif.path)
                span.glyphicon.glyphicon-send
                |#{notif.text}
              button.glyphicon.glyphicon-remove(value="" + notif._id)
          else
            li 
              p No new notifications for you.
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
    // Latest compiled and minified JavaScript
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js', integrity='sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa', crossorigin='anonymous')
    script(src='/javascript/home.js')
